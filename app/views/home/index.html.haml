- content_for :head do
  = stylesheet_link_tag 'home'
  = javascript_include_tag 'home'

= form_for Issue.new, :remote => true do |f|
  - placeholder = capture do
    &ndash; What are you concerned about in your city?
    &ndash; Give it some tags (ex: #traffic...)

  = f.text_area :title, value: placeholder, cols: 30, rows: 10
  = f.submit "That's It!"

#issues
  %ul.nav
    %li.active= link_to 'Recent', '/issues?sort=recent', :remote => true
    %li= link_to 'Popular', '/issues?sort=popular', :remote => true

  .list
    = render @issues
